{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C++: g++.exe build active file",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"${file}",
				"-o",
				"${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\g++.exe"
		},
		{
			"label": "Run c++ file with pause",
			"type": "shell",
			"command": "start",
			"args": [
				"${cwd}\\run.bat",
				"${file}"
			],
			"presentation": {
				"clear": true,
				"showReuseMessage": false,
				"reveal": "silent",
				"close": true
			}
		}
	]
}